<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{ name }}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Submit a new Journal:</h3>

    <form class="form new-journal-form">
      <div class="form-group">
        <label for="journal-name">Journal name:</label>
        <input class="form-input" type="text" id="journal-name" name="journal-name" />
      </div>
      <div class="form-group">
        <label for="sleep-hours">Hours of Sleep:</label>
        <input class="form-input" type="number" id="sleep-hours" name="sleep-hours" />
      </div>
      <div class="form-group">
        <label for="sleep-journal">Description:</label>
        <textarea class="form-input" id="sleep-journal" name="sleep-journal"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if sleepCycle.length}}
  <div class="col-md-6 journal-list">
    <h3>Past Journals:</h3>

    {{#each sleepCycles as |sleepCycle|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/sleep/{{sleepCycle.id}}">{{sleepCycle.hours_of_sleep}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{sleepCycle.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
